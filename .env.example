# Environment Configuration
# Copy this file to .env and update with your actual values

# Application Settings
APP_NAME=LinkedIn Analyzer Agent
APP_VERSION=1.0.0
DEBUG=True
HOST=0.0.0.0
PORT=8000

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/linkedin_analyzer
REDIS_URL=redis://localhost:6379/0
MONGODB_URL=mongodb://localhost:27017/linkedin_analyzer

# Security
SECRET_KEY=your-super-secret-key-here-change-this-in-production
JWT_SECRET=your-jwt-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# API Keys
OPENAI_API_KEY=your-openai-api-key-here
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# LinkedIn API (if using official API)
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# Web Scraping Configuration
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36 (KHTML, like Gecko) Chrome/120.0.0.0 Safari/537.36
REQUEST_DELAY_MIN=1
REQUEST_DELAY_MAX=3
MAX_RETRIES=3
TIMEOUT_SECONDS=30

# Proxy Configuration (optional)
USE_PROXY=False
PROXY_HOST=
PROXY_PORT=
PROXY_USERNAME=
PROXY_PASSWORD=

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=3600

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log

# Email Configuration (for notifications)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USERNAME=your-email@gmail.com
EMAIL_PASSWORD=your-email-password
EMAIL_USE_TLS=True

# Cloud Storage (AWS S3, Azure, etc.)
CLOUD_PROVIDER=aws
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_BUCKET_NAME=linkedin-analyzer-bucket
AWS_REGION=us-east-1

# Monitoring and Analytics
ENABLE_METRICS=True
PROMETHEUS_PORT=9090
SENTRY_DSN=your-sentry-dsn-here

# Development Settings
RELOAD=True
WORKERS=1

# Production Settings (uncomment for production)
# DEBUG=False
# WORKERS=4
# RELOAD=False
